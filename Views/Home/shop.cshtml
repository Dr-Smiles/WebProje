                            <div class="product-img">
                                <img src="@Html.Raw(item.image)" alt="">
                            </div>

                            <div class="product-description d-flex align-items-center justify-content-between">
                                <div class="product-meta-data">
                                    <div class="line"></div>
                                    <p class="product-price">@Html.Raw(item.price) â‚º</p>
                                    <a href="@Url.Action("productdetails", new {productID = item.id})">
                                        <h6>@Html.DisplayName(item.name)</h6>
                                    </a>
                                </div>
                                <div class="ratings-cart text-right">
                                    <div class="cart">
                                        <a href="@Url.Action("cart")" data-toggle="tooltip" data-placement="left" title="Add to Cart"><img src="~/img/core-img/cart.png" alt=""></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    }

                </div>

                <div class="row">
                    <div class="col-12">
                        <!-- Pagination -->
                        <nav aria-label="navigation">
                            <ul class="pagination justify-content-end mt-50">
