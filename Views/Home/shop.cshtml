                        <div class="product-topbar d-xl-flex align-items-end justify-content-between">

                        </div>
                    </div>
                </div>

                <div class="row">

                    @foreach (var item in ViewBag.Product)
                    {
                    <div class="col-12 col-sm-6 col-md-12 col-xl-3">
